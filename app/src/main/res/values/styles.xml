<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_36</item>
        <item name="android:textColor">@color/black_555555</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="DialogTheme" parent="ActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="RightClassSelectItemLine">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="RightClassSelectItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selecter_right_class_select</item>
    </style>

    <style name="RightClassSelectItemGrp">
        <item name="android:layout_weight">0.26</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="CaigouListOp">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_45</item>
        <item name="android:textColor">@color/gray_999999</item>
        <item name="android:background">@color/white_f8f8f8</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CaigouListItemLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white_ffffff</item>
    </style>
    <style name="CaigouListItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>
    <style name="CaigouListItemImg">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">72dp</item>
    </style>
    <style name="CaigouListItemInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CaigouListItemInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_48</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_555555</item>
    </style>
    <style name="CaigouListItemInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="CaigouListItemInfoText.Red">
        <item name="android:textColor">@color/red_e82c1d</item>
    </style>

    <style name="CaigouDetailInfoLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">19dp</item>
    </style>
    <style name="CaigouDetailInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_36</item>
        <item name="android:textColor">@color/gray_999999</item>
    </style>
    <style name="CaigouDetailInfoContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_36</item>
        <item name="android:textColor">@color/black_555555</item>
    </style>

    <style name="CaigouListItemOp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="CaigouListItemOpBtn">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_right_class_select_nor</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:textSize">@dimen/font_27</item>
    </style>
    <style name="CaigouListItemOpBtn.Current">
        <item name="android:background">@drawable/shape_right_class_select_cur</item>
        <item name="android:textColor">@color/red_e82c1d</item>
    </style>

    <style name="InputMuiltCheckBoxContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="InputMuiltCheckBoxItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="InputMuiltCheckBoxItem.Boundary">
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="InputMuiltCheckBoxItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_36</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>
    <style name="InputMuiltCheckBoxItemImg">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/icon_check_bor_nor</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Input">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColorHint">@color/gray_999999</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:textSize">@dimen/font_33</item>
        <item name="android:background">@drawable/shape_pub_product_img_border</item>
    </style>

    <style name="ChatNotify">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textSize">@dimen/font_27</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_chat_notify_bg</item>
    </style>

    <style name="IconSelect">
        <item name="android:src">@drawable/icon_select</item>
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="DropSelectItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textSize">@dimen/font_45</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LineY">
        <item name="android:background">@color/red_e82c1d</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>

    <style name="LineX_b2b2b2">
        <item name="android:background">@color/gray_b2b2b2</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="LineY_b2b2b2">
        <item name="android:background">@color/gray_b2b2b2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>

    <style name="LineX_dddddd">
        <item name="android:background">@color/gray_dddddd</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LineY_dddddd">
        <item name="android:background">@color/gray_dddddd</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>

</resources>
